<p id="notice"><%= notice %></p>

<div id="contenedor">
	<h1>Listado de Posts</h1>
	
	
	<% @posts.each do |post| %>
		<hr />
		<div id="divPost" class="entrada">
		  <h2><%= post.titulo %></h2>
		  <h3><%= post.nombre %></h3>
		  <p><%= post.contenido %></p>
		  <p><%= link_to 'Mostrar', post %> - <%= link_to 'Editar', edit_post_path(post) %> - <%= link_to 'Eliminar', post, method: :delete, data: { confirm: '¿Estás seguro?' } %></p>
		</div>
	<% end %>
	
	<br>
	
	<%= link_to 'Crear Post', new_post_path %>
</div>